{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "database/**/*.ts",
    "interfaces/**/*.ts",
    "queries/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
